{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">IDR {{ this.price }}</div>
                            <a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to cart</a>
                            <a href="/like/{{ this._id }}" class="btn btn-danger pull-right"> <span class="glyphicon glyphicon-heart-empty"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
